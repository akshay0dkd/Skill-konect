rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isParticipant(conversationId) {
      let doc = get(/databases/$(database)/documents/conversations/$(conversationId));
      return doc.exists && request.auth.uid in doc.data.participants;
    }

    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == userId;
      allow update: if request.auth != null;
      allow delete: if request.auth.uid == userId;
    }

    match /mentorship_requests/{requestId} {
      allow create: if request.auth != null;
      allow read: if request.auth.uid == resource.data.fromUserId || request.auth.uid == resource.data.toUserId;
      allow update: if request.auth.uid == resource.data.toUserId || request.auth.uid == resource.data.fromUserId;
    }

    match /conversations/{conversationId} {
      allow create: if request.auth.uid in request.resource.data.participants &&
                       request.resource.data.participants.size() == 2;

      // THE FINAL FIX: This simple, combined rule correctly handles reads AND updates,
      // both inside and outside the transaction. The key is checking the ID string first.
      allow read, update: if (request.auth.uid in conversationId.split('_')) || isParticipant(conversationId);

      match /messages/{messageId} {
        allow read: if isParticipant(conversationId);

        // This rule was correct and handles the initial message and all subsequent ones.
        allow create: if ((request.auth.uid in conversationId.split('_')) || isParticipant(conversationId)) &&
                         request.auth.uid == request.resource.data.senderId;
      }
    }

    match /skills/{skillId} {
        allow read: if request.auth != null;
    }

    match /authErrors/{errorId} {
        allow create: if true;
    }

    match /tasks/{taskId} {
      allow read, create, update: if request.auth != null && (request.auth.uid == resource.data.assignedBy || request.auth.uid == resource.data.assignedTo);
    }
  }
}